

<h1>Tax Report for <%= financialYear %></h1>
<div class="content-wrapper">
    <div class="tax-summary">
        <h2>Summary</h2>
        <p>Total Revenue: $<%= totalRevenue.toFixed(2) %></p>
        <p>Total Deductions: $<%= totalDeductions.toFixed(2) %></p>
        <p>Taxable Income: $<%= taxableIncome.toFixed(2) %></p>
        <p>Income Tax: $<%= incomeTax.toFixed(2) %></p>
        <p>Medicare Levy: $<%= medicareLevy.toFixed(2) %></p>
        <p>Total Tax: $<%= totalTax.toFixed(2) %></p>
        <p>Net Income: $<%= netIncome.toFixed(2) %></p>
    </div>

    <div class="tax-details">
        <h2>Detailed Breakdown</h2>
        <h3>Income</h3>
        <ul>
            <% invoices.forEach(invoice => { %>
                <li>Invoice <%= invoice.crn %>: $<%= invoice.totalAmount.toFixed(2) %></li>
            <% }); %>
        </ul>

        <h3>Deductions</h3>
        <ul>
            <% deductions.forEach(deduction => { %>
                <li><%= deduction.description %>: $<%= deduction.amount.toFixed(2) %></li>
            <% }); %>
        </ul>

        <h3>Tax Calculation</h3>
        <p>Tax-Free Threshold: $<%= taxConfig.taxFreeThreshold.toFixed(2) %></p>
        <% taxConfig.taxBrackets.forEach(bracket => { %>
            <p>
                $<%= bracket.min.toFixed(2) %> - $<%= bracket.max.toFixed(2) %>: 
                <%= (bracket.rate * 100).toFixed(2) %>% + $<%= bracket.base.toFixed(2) %>
            </p>
        <% }); %>
    </div>
</div>